<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#87CEEB"> <!-- Light purple background -->

    <!-- Profile Picture -->

    <!-- Personal Information -->

    <ImageView
        android:id="@+id/profileImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nahian" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:text="Saud Al Nahian"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Department: CSE"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Session: 19/20"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reg No: 20190648653"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hall: Sahid Rafiq Jabbar Hall"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"
            android:textColor="#000000"/>


    <!-- Social Media Icons -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:text="Blood Group: O+"
        android:textSize="16sp"
        android:textColor="#000000"/>

    <LinearLayout
        android:layout_width="263dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- Email Icon -->
        <ImageView
            android:id="@+id/emailIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@drawable/email" />

        <!-- WhatsApp Icon -->
        <ImageView
            android:id="@+id/whatsappIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@drawable/whatsapp" />

        <!-- Facebook Icon -->
        <ImageView
            android:id="@+id/facebookIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@drawable/facebook" />

        <ImageView
            android:id="@+id/githubIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:src="@drawable/git" />


    </LinearLayout>
        </LinearLayout>
